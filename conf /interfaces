# Configuração do código das interfaces
fonte /etc/network/interfaces.d/*

# Instalação das interfaces de loopback
auto lo
iface lo inet loopback

# Configurações da interface de rede estática enp0s3
auto enp0s3
iface enp0s3 inet estático
endereço 192.168.1.11
netmask 255.255.255.0
rede 192.168.1.0
transmissão 192.168.1.255
gateway 192.168.1.1
dns-nameservers 192.168.1.1

# Domínio igual do Microsoft
dns-search anselmo.local
dns-domain anselmo.local
